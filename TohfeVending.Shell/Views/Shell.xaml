<Window x:Class="TohfeVending.Shell.Views.Shell"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:prism="http://prismlibrary.com/"
        prism:ViewModelLocator.AutoWireViewModel="True"
        Title="{Binding Title}" Height="450" Width="625" WindowStartupLocation="CenterScreen">
    <DockPanel >
        <ContentControl BorderBrush="Red" BorderThickness="1" prism:RegionManager.RegionName="HeaderRegion" Height="50" DockPanel.Dock="Top" />
        <ContentControl prism:RegionManager.RegionName="ContentRegion" />
    </DockPanel>
</Window>
